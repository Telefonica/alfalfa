{
  "name": "alfalfa",
  "version": "2.2.0",
  "description": "Startup pattern for node servers",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Telefonica/alfalfa.git"
  },
  "keywords": [
    "startup",
    "pattern",
    "server",
    "binary"
  ],
  "author": "Javier Mendiara Ca√±ardo <jmendiara@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Telefonica/alfalfa/issues"
  },
  "homepage": "https://github.com/Telefonica/alfalfa#readme",
  "scripts-info": {
    "info": "List available scripts",
    "build": "Builds the plugin, by cleaning and compiling TypesScript into Javascript",
    "compile": "Just compiles your code",
    "lint": "Check coding guidelines conformance",
    "security": "Check if your dependencies are secure",
    "test": "Test your codebase"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "shx rm -fR ./lib",
    "compile": "tsc",
    "info": "npm-scripts-info",
    "lint": "tslint './src/**/*.ts'",
    "prepublish": "npm run build",
    "start": "./example/bin/server",
    "security": "nsp check",
    "test": "npm run build && mocha -R spec 'lib/**/*.spec.js'",
    "watch": "npm run build && npm-run-all --parallel watch:*",
    "watch:ts": "tsc -w"
  },
  "dependencies": {
    "@types/mongodb": "^2.2.24",
    "@types/node": "^6.0.40",
    "bluebird": "^3.4.6",
    "bluebird-retry": "^0.8.0",
    "logops": "^1.0.6",
    "server-terminate": "^1.4.0",
    "therror": "^2.1.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.33",
    "@types/bluebird-retry": "0.0.30",
    "@types/chai": "^3.4.33",
    "@types/mocha": "^2.2.32",
    "@types/sinon": "^1.16.30",
    "@types/sinon-chai": "^2.7.27",
    "chai": "^3.5.0",
    "mocha": "^3.0.2",
    "nodemon": "^1.9.2",
    "npm-run-all": "^3.1.0",
    "npm-scripts-info": "^0.3.6",
    "nsp": "^2.6.1",
    "shx": "^0.1.4",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  },
  "engines": {
    "node": ">=4"
  }
}
